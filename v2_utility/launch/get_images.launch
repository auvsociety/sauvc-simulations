<?xml version="1.0" encoding="UTF-8"?>

<launch>
	<arg name="bag" default="sauvc_simpleRun.bag"/>
	<arg name="use_frnt" default="false"/>

	<node 
		name="rosbag"
		pkg="rosbag" 
		type="play"
		required="true"
		args="$(find v2_dataset)/rosbags/$(arg bag)"
		output="screen"
	/>
	
	<node 
		name="extract"
		pkg="image_view" 
		type="extract_images"
		respawn="false"
		required="true"
		cwd="ROS_HOME"
		output="screen">

		<remap 
			from="image" 
			to="/auv_v2/f_cam/image_raw" 
			if="$(arg use_frnt)"
		/>
		<remap 
			from="image" 
			to="/auv_v2/d_cam/image_raw" 
			unless="$(arg use_frnt)"
		/>

	</node>
	
</launch>